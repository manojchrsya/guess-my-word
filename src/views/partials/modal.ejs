<!-- Puzzle Container Modal -->
<div class="modal fade" id="puzzleWord" tabindex="-1" role="dialog" aria-labelledby="puzzleTitle" aria-hidden="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="puzzleTitle">Select the puzzle word!!</h5>
      </div>
      <div class="modal-body">
        <div class="puzzle-container d-none">
          <div class="input-group mx-auto col-md-12 px-0">
            <input class="form-control form-control puzzle-word" type="text" placeholder="Please enter your word here...">
            <div class="input-group-append">
              <button class="btn btn-success set-puzzle-word" type="button"><i class="fa fa-save" aria-hidden="true"></i></button>
            </div>
          </div>
          <div class="alert alert-danger d-none puzzleInstruct p-0 m-0" role="alert"></div>
        </div>
      </div>
    </div>
  </div>
</div>
